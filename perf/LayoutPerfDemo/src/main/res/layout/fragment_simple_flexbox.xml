<com.google.android.flexbox.FlexboxLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="bottom"
        android:background="@drawable/broadcast_ops_bg"
        app:flexWrap="wrap"
        app:alignItems="flex_end"
        tools:context="com.github.piasy.layoutperfdemo.SimpleFlexFragment"
        >

    <ImageButton
            android:id="@+id/mIbInputText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/iv_comment"
            />

    <TextView
            android:id="@+id/mTvPress2Say"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            app:layout_flexGrow="1"
            android:background="@drawable/button_press_to_say_bg"
            android:gravity="center"
            android:text="按住\u0020说话"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

    <ImageButton
            android:id="@+id/mIbPublish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/iv_start_publish_in_group"
            />

    <!-- how could I put the below item on the second line(from
    bottom to top)? Of course nested could. -->
    <TextView
            android:id="@+id/mTvHintPublish"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/iv_hint_bg_request_switch"
            android:gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="7dp"
            android:singleLine="false"
            android:text="发个直播，召集群\n里的好朋友过来"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            />

</com.google.android.flexbox.FlexboxLayout>
