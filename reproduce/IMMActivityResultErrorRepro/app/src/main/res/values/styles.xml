<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LeftBackTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">#18181C</item>
        <item name="hasLeftButton">true</item>
        <item name="leftButtonSrc">@drawable/iv_back</item>
        <item name="hasTitle">true</item>
        <item name="centerTitleTextGravity">center</item>
        <item name="centerTitleEllipsize">end</item>
        <item name="hasDivider">false</item>
    </style>

    <style name="LeftBackSearchTitleBar" parent="LeftBackTitleBar">
        <item name="hasRightButton">true</item>
        <item name="rightButtonShownDefault">true</item>
        <item name="rightButtonAsText">true</item>

        <item name="rightButtonAsSearchView">true</item>
        <item name="searchViewBg">@drawable/button_white_with_corner_bg</item>
        <item name="searchViewHeight">28dp</item>
        <item name="searchViewMarginLeft">8dp</item>
        <item name="hasIcon">true</item>
        <item name="iconRes">@drawable/home_search_icon_in_search_area</item>
        <item name="iconMarginLeft">10dp</item>
        <item name="iconMarginRight">3dp</item>
        <item name="editTextSize">14sp</item>
        <item name="clearableEditTextColor">@android:color/black</item>
        <item name="clearIconRes">@drawable/clear_edit_selector</item>
        <item name="clearIconMarginLeft">10dp</item>
        <item name="clearIconMarginRight">0dp</item>
        <item name="editTextAutoFocus">true</item>
        <item name="closeSearchViewTextColor">@android:color/white</item>
        <item name="closeSearchViewTextSize">14sp</item>
    </style>
</resources>
